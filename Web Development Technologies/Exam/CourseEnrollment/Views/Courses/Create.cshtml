@using CourseEnrollment.ViewModel;
@using CourseEnrollment.Data;
@model CreateCourseViewModel;
@{
    ViewData["Title"] = "Add Student";
}

<!-- Used to create new students for ease of demonstration-->

<h1>Add Course</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label">Course ID</label> <br />
        @Html.EditorFor(model => model.CourseID)
        @Html.ValidationMessageFor(m => m.CourseID, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">Title</label><br />
        @Html.EditorFor(model => model.Title)
        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">Credit Points Allocated</label><br />
        @Html.EditorFor(model => model.CreditPoints)
        @Html.ValidationMessageFor(m => m.CreditPoints, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label asp-for="Career" class="control-label"></label>
        <!-- Must be a dropdown -->
        <select asp-for="Career" class="form-control">
            <option value=@Career.Undergraduate> @Career.Undergraduate </option>
            <option value=@Career.Postgraduate> @Career.Postgraduate </option>
        </select>
        @Html.ValidationMessageFor(m => m.Career, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">Course Coordinator</label><br />
        @Html.EditorFor(model => model.Coordinator)
        @Html.ValidationMessageFor(m => m.Coordinator, "", new { @class = "text-danger" })
    </div>

    <button type="submit">Create Course</button>
    @Html.ActionLink("Cancel", "", new { Controller = "Students", Action = "Create" }, new { @class = "btn btn-primary" })
</form>






