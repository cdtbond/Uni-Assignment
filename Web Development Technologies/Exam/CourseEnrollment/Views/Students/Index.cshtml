@using CourseEnrollment.ViewModel;
@using X.PagedList.Mvc.Core;
@model StudentViewModel;
@{
    ViewData["Title"] = "Courses";
}

<!-- Used to create new students for ease of demonstration-->

<h1>All Students</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Email</th>
        </tr>


    </thead>
    <tbody>
        <!-- Loop through each Student-->
        @foreach (var student in Model.Students)
        {

            <tr>
                <td>@student.StudentID</td>
                <td>@student.FullName</td>
                <td>@student.MobilePhone</td>
                <td>@student.Email</td>
            </tr>
        }
    </tbody>
</table>


@Html.PagedListPager(Model.Students, page => Url.Action("Index", "Students", new { page = page }), new X.PagedList.Web.Common.PagedListRenderOptionsBase
{
LiElementClasses = new[] { "page-item" },
PageClasses = new[] { "page-link" }
})

    <form method="get" asp-action="Create">
        <button type="submit" class="btn btn-primary">Create Student</button>
    </form>

@Html.HiddenFor(x => x.Students)





