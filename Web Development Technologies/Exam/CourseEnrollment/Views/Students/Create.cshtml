@using CourseEnrollment.ViewModel;
@model CreateStudentViewModel;
@{
    ViewData["Title"] = "Add Student";
}

<!-- Used to create new students for ease of demonstration-->

<h1>Create Student</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label class="control-label">Student ID</label>
        @Html.EditorFor(model => model.StudentID)
        @Html.ValidationMessageFor(m => m.StudentID, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">First Name</label>
        @Html.EditorFor(model => model.FirstName)
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">Last Name</label>
        @Html.EditorFor(model => model.LastName)
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">Mobile Number</label>
        @Html.EditorFor(model => model.MobilePhone)
        @Html.ValidationMessageFor(m => m.MobilePhone, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label class="control-label">Email Address</label>
        @Html.EditorFor(model => model.Email)
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <button type="submit">Create Student</button>
    @Html.ActionLink("Cancel", "", new { Controller = "Students", Action = "Create" }, new { @class = "btn btn-primary" })
</form>






